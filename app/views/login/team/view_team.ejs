<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/head %>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-default">
      <% include ../../partials/navigation %>
    </nav>

    <!-- Header -->
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1>
                        <i class="fa fa-cog fa-spin" aria-hidden="true"></i> Team <small>manage your team</small>
                    </h1>
                </div>
                <div class="dropdown create">
                  <div class="col-md-2">
                      <a href="/add_team" class="btn btn-default" role="button">Add Team</a>
                  </div>
              </div>
            </div>
        </div>
    </header>

    <!-- Breadcrumb -->
    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="/dashboard">Dashboard</a></li>
                <li class="active">Team</li>
            </ol>
        </div>
    </section>
    
    <%- messages()  %>

    <!-- Main -->
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Team Members</h3>
                        </div>

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" placeholder="Filter Pages...">
                                </div>
                            </div>
                            <br>
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th>Name</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Date Added</th>
                                    <th>Action</th>
                                </tr>
                                    <% for(let i = 0; i < team.length; i++) {%>
                                    <tr>
                                        <td> <%= team[i].team_name %></td>
                                        <td> <%= team[i].team_title %></td>
                                        <td> <%= truncateText(team[i].team_description, 10) %></td>
                                        <td> <%= team[i].createdby.toDateString() %></td>
                                        <td>
                                            <a href='/edit_team/<%= team[i].team_id %>'>
                                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                             </a>
                                            <button class="btn btn-danger delete-team" data-id='<%= team[i].team_id %>'>
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                            </button>
                                        </td>
                                    </tr>
                                    <% } %>
                                
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- footer -->
    <% include ../../partials/footer %>
    
  </body>
</html>
