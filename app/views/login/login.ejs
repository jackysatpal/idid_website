
<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>

  <body>

    <!-- Navbar -->
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">IDiD Lab</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          
        </div><!--/.nav-collapse -->
      </div>
    </nav>

     <!-- Header -->
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1><img id="image" src="/images/home.png" class="img-rounded img-responsive"> IDiD Lab</h1>
                </div> 
          </div>
    </header>

    <% if (typeof loginerror !== 'undefined' ) { %>
        <div class="container">
            <% for (const error of loginerror) { %>
                <div class="col-md-4 col-md-offset-4 alert alert-danger">
                    <%= error.msg %>
                </div>
             <% } %>
        </div> 
    <% } %>

   <!-- Main -->
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                        <form id="login" action="/login" method="post" class="well">
                            <div class="form-group">
                                <label><i class="fa fa-sign-in" aria-hidden="true"></i> Email Address</label>
                                <input type="text" name="email" class="form-control" placeholder="Enter Email">
                            </div>
                            <div class="form-group">
                                <label><i class="fa fa-key" aria-hidden="true"></i> Password</label>
                                <input type="Password" class="form-control" name="password" placeholder="Enter Password">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </form>
                </div>
            </div>
        </div>
    </section>

     <!-- footer -->
        <% include partials/footer %>
  </body>
</html>
